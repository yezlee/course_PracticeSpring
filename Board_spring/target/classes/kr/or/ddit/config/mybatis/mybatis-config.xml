<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- mybatis-config.xml 파일은 그냥 xml파일이고 위에 doctype은 마이바티스 웹사이트에서 가져온것임 -->  
  
<configuration>
	 
	<typeAliases>
		<typeAlias type="kr.or.ddit.board.model.UserVo"  alias ="userVo"/>
		<typeAlias type="kr.or.ddit.board.model.BoardVo"  alias ="boardVo"/>
		<typeAlias type="kr.or.ddit.board.model.PostVo"  alias ="postVo"/>
		<typeAlias type="kr.or.ddit.board.model.PageVo"  alias ="pageVo"/>
	</typeAliases>  
	
	<mappers>
	    <mapper resource="kr/or/ddit/config/mybatis/mapper/users.xml"/>
	    <mapper resource="kr/or/ddit/config/mybatis/mapper/board.xml"/>
	    <mapper resource="kr/or/ddit/config/mybatis/mapper/post.xml"/>
	</mappers>

  
</configuration>